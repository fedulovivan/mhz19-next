{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist",
        "paths": { "src/*": ["./src/*"] },
        "target": "ES2022",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "removeComments": true
    },
    "include": ["./src/server.ts"]
}
