################################################################################
## EditorConfig is awesome: http://EditorConfig.org
################################################################################

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true

[**.{css,styl,js,json,jade,html,sh,ts,tsx}]
charset = utf-8
trim_trailing_whitespace = true

[**.css]
indent_style = space
indent_size = 4

[**.scss]
indent_style = space
indent_size = 4

[**.js]
indent_style = space
indent_size = 4

[**.json]
indent_style = space
indent_size = 4

[**.jade]
indent_style = space
indent_size = 4

[**.html]
indent_style = space
indent_size = 4

[**.sh]
indent_style = space
indent_size = 4

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
