{
    "compilerOptions": {
        "allowJs": false,
        "baseUrl": "./",
        "checkJs": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ES2022",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022",
        "outDir": "./dist",
        "paths": {
            "lib*": [
                "../lib/*"
            ],
        },
    },
    "include": [
        "./index.ts"
    ],
    "tsc-alias": {
        "resolveFullPaths": true
    },
}
